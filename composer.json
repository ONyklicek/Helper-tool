{
  "name": "onyklicek/helper-tool",
  "description": "PHP helper tools to make your life easier.",
  "keywords": ["php", "helper", "tool", "edit", "string"],
  "homepage": "https://github.com/ONyklicek/Helper-tool",
  "type": "library",
  "license": ["BSD-3-Clause"],
  "authors": [
    {
      "name": "Ondřej Nyklíček",
      "email": "ondrejnyklicek@icloud.com"
    }
  ],
  "require": {
    "php": ">=8.1",
    "ext-mbstring": "*",
  },
  "autoload": {
    "psr-4": {
      "Helper\\": "src/Helper/",
      "Tool\\": "src/Tool"
    },
    "files": ["src/Tool.php"],
    "classmap": ["src/Helper"]
  },
  "config": {
    "platform": {
      "php": "8.1.0"
    },
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "require-dev": {
    "phpstan/phpstan": "1.11.x-dev",
    "phpunit/phpunit": "^9.6"
  }
}
