{
  "name": "onyklicek/helper-tool",
  "description": "PHP helper tools to make your life easier.",
  "keywords": ["php", "helper", "tool", "edit", "string"],
  "type": "library",
  "license": ["BSD-3-Clause"],
  "authors": [
    {
      "name": "Ondřej Nyklíček",
      "email": "ondrejnyklicek@icloud.com"
    }
  ],
  "require": {
    "php": ">=8.1",
    "ext-mbstring": "*",
    "vlucas/phpdotenv": "^5.5@dev"
  },
  "autoload": {
    "psr-4": {
      "Helper\\": "src/Helper/",
      "//Tool\\": "src/Tool"

    },
    "files": ["src/Tool.php"],
    "classmap": ["src/Helper", "src/Tool", "src/Tool.php"]
  },
  "config": {
    "platform": {
      "php": "8.1"
    },
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "require-dev": {
    "phpunit/phpunit": "^10",
    "phpstan/phpstan": "1.11.x-dev"
  }
}
